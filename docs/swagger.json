{
  "openapi": "3.0.0",
  "info": {
    "title": "papierflieger-api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "local"
    },
    {
      "url": "https://fp-backend-production.up.railway.app/",
      "description": "production"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Auth API Collection"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register",
        "tags": ["Auth"],
        "description": "Create new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Registration success!"
                    },
                    "user": {
                      "$ref": "#/components/schemas/Users"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email already registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "email already exists"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "tags": ["Auth"],
        "description": "Retrieve access tokens",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "email",
                    "example": "haerisuh@mail.com"
                  },
                  "password": {
                    "type": "password",
                    "example": "heri1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login success!"
                    },
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MTksIndhcmVob3Vz"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "wrong password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Wrong password!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Mr"
          },
          "fullName": {
            "type": "string",
            "example": "Suhaeri"
          },
          "username": {
            "type": "string",
            "example": "hetotheri"
          },
          "email": {
            "type": "string",
            "example": "haerisuh@mail.com"
          },
          "password": {
            "type": "password",
            "example": "heri1234"
          },
          "phone": {
            "type": "string",
            "example": "081384753928"
          },
          "birthdate": {
            "type": "date",
            "example": "2002-09-11"
          },
          "nationality": {
            "type": "string",
            "example": "Indonesia"
          },
          "country": {
            "type": "string",
            "example": "Indonesia"
          },
          "province": {
            "type": "string",
            "example": "DKI Jakarta"
          },
          "regency": {
            "type": "string",
            "example": "Jakarta Timur"
          }
        }
      }
    }
  },
  "securitySchemes": {
    "bearerToken": {
      "type": "http",
      "scheme": "bearer"
    }
  }
}
