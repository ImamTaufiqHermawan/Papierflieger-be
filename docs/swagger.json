{
  "openapi": "3.0.0",
  "info": {
    "title": "papierflieger-api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "local"
    },
    {
      "url": "https://fp-backend-production.up.railway.app/",
      "description": "production"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Auth API Collection"
    },
    {
      "name": "Flight",
      "description": "Flight API Collection"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register",
        "tags": ["Auth"],
        "description": "Create new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Registrasi berhasil. Silakan cek email dan verifikasi akun untuk melanjutkan."
                    },
                    "user": {
                      "allOf": [
                        {
                          "$ref": "#/components/schemas/Users"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer"
                            },
                            "avatar": {
                              "type": "string",
                              "example": "https://ik.imagekit.io/lscxjpnrv/defaultava.png"
                            },
                            "createdAt": {
                              "type": "string",
                              "format": "date-time"
                            },
                            "updatedAt": {
                              "type": "string",
                              "format": "date-time"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email already registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Email telah terdaftar."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "tags": ["Auth"],
        "description": "Retrieve access tokens",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "email",
                    "example": "haerisuh@gmail.com"
                  },
                  "password": {
                    "type": "password",
                    "example": "heri1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login berhasil."
                    },
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MTksIndhcmVob3Vz"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "wrong password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Password salah."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/flights": {
      "post": {
        "summary": "Create Flight",
        "tags": ["Flight"],
        "description": "Add new flight on the database",
        "security": [{ "bearerToken": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Flights"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Berhasil menambahkan daftar penerbangan baru."
                    },
                    "data": {
                      "allOf": [
                        {
                          "$ref": "#/components/schemas/Flights"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "createdAt": {
                              "type": "string",
                              "format": "date-time"
                            },
                            "updatedAt": {
                              "type": "string",
                              "format": "date-time"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid token. Unauthorized.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Hanya bisa diakses oleh admin."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Flight number cannot be blank.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Nomor penerbangan tidak boleh kosong."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "List Flights",
        "tags": ["Flight"],
        "description": "Retrieve list of flights",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "$ref": "#/components/schemas/Flights"
                    },
                    "count": {
                      "type": "integer",
                      "example": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/flights/{flightNumber}": {
      "get": {
        "tags": ["Flight"],
        "summary": "Get a flight",
        "description": "Retrieve flight detail",
        "parameters": [
          {
            "in": "path",
            "name": "flightNumber",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Flights"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "createdAt": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "updatedAt": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "The flight number is not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Nomor penerbangan tidak ditemukan."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Flight"],
        "summary": "Update flight",
        "description": "Change flight information",
        "security": [{ "bearerToken": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "flightNumber",
            "required": true,
            "type": "integer"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Flights"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Informasi penerbangan berhasil diperbarui."
                    },
                    "data": {
                      "$ref": "#/components/schemas/Flights"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid token. Unauthorized.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Hanya bisa diakses oleh admin."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "The flight number is not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Nomor penerbangan tidak ditemukan."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Flight"],
        "summary": "Delete flight",
        "description": "Remove existing flight by flight number",
        "security": [{ "bearerToken": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "flightNumber",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Data penerbangan berhasil dihapus."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid token. Unauthorized.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Hanya bisa diakses oleh admin."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "The flight number is not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "Nomor penerbangan tidak ditemukan."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Mr"
          },
          "fullName": {
            "type": "string",
            "example": "Suhaeri"
          },
          "username": {
            "type": "string",
            "example": "hetotheri"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "haerisuh@gmail.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 8,
            "example": "heri1234"
          },
          "phone": {
            "type": "string",
            "example": "081384753928"
          },
          "birthdate": {
            "type": "date",
            "example": "2002-09-11"
          },
          "nationality": {
            "type": "string",
            "example": "Indonesia"
          },
          "country": {
            "type": "string",
            "example": "Indonesia"
          },
          "province": {
            "type": "string",
            "example": "DKI Jakarta"
          },
          "regency": {
            "type": "string",
            "example": "Jakarta Timur"
          }
        }
      },
      "Transactions": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "bookingCode": {
            "type": "string",
            "example": "HN629DNS"
          },
          "userId": {
            "type": "integer"
          },
          "ticketNumber": {
            "type": "integer",
            "example": "674286"
          },
          "totalPayment": {
            "type": "integer"
          },
          "bookingDate": {
            "type": "string",
            "format": "date-time"
          },
          "payDate": {
            "type": "string",
            "format": "date-time"
          },
          "payMethod": {
            "type": "integer",
            "example": "1 (Bank BCA)"
          },
          "paymentProof": {
            "type": "string",
            "example": "https://ik.imagekit.io/lscxjpnrv/contohbuktitf_f2ZLTGHfH.jpg"
          },
          "status": {
            "type": "boolean",
            "example": "1 (pembayaran berhasil)"
          }
        }
      },
      "PaymentMethods": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "bank": {
            "type": "string",
            "example": "Bank BCA"
          },
          "details": {
            "type": "string",
            "example": "Nomor Rekening: 32649712"
          }
        }
      },
      "Tickets": {
        "type": "object",
        "properties": {
          "ticketNumber": {
            "type": "integer",
            "example": "674286"
          },
          "passengerName": {
            "type": "string",
            "example": "Suhaeri"
          },
          "class": {
            "type": "string",
            "example": "Business Class"
          },
          "trip": {
            "type": "string",
            "example": "One-Way"
          },
          "flightNumber": {
            "type": "string",
            "example": "AC-815"
          },
          "flightFrom": {
            "type": "string",
            "example": "Kuala Lumpur (KUL)"
          },
          "flightTo": {
            "type": "string",
            "example": "Jakarta (CGK)"
          },
          "boarding": {
            "type": "string",
            "format": "date-time"
          },
          "gate": {
            "type": "integer",
            "example": 8
          },
          "seat": {
            "type": "string",
            "example": "12B"
          },
          "price": {
            "type": "integer",
            "example": "8000000"
          },
          "baggage": {
            "type": "string"
          }
        }
      },
      "Airplanes": {
        "type": "object",
        "properties": {
          "airplaneCode": {
            "type": "string"
          },
          "airplaneType": {
            "type": "string"
          },
          "seatCapacity": {
            "type": "integer"
          }
        }
      },
      "Flights": {
        "type": "object",
        "properties": {
          "flightNumber": {
            "type": "string",
            "example": "JT-281"
          },
          "airplaneCode": {
            "type": "string"
          },
          "flightFrom": {
            "type": "string",
            "example": "Juanda International Airport (SUB)"
          },
          "flightTo": {
            "type": "string",
            "example": "Kuala Lumpur International Airport (KUL)"
          },
          "departureTime": {
            "type": "string",
            "format": "date-time"
          },
          "arrivalTime": {
            "type": "string",
            "format": "date-time"
          },
          "totalTransit": {
            "type": "integer",
            "example": 1
          },
          "transitPoint": {
            "type": "string",
            "example": "Soekarno Hatta International Airport (CGK)"
          },
          "transitDuration": {
            "type": "integer",
            "example": 90
          }
        }
      },
      "Schedules": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "flightNumber": {
            "type": "string",
            "example": "JT-281"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerToken": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    }
  }
}
