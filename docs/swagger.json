{
  "openapi": "3.0.0",
  "info": {
    "title": "papierflieger-api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "local"
    },
    {
      "url": "https://fp-backend-production.up.railway.app/",
      "description": "production"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Users API Collection"
    }
  ],
  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Users"],
        "description": "Registration for new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Registration success!"
                    },
                    "user": {
                      "$ref": "#/components/schemas/Users"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email already registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "user email already exists"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Users"],
        "description": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "email",
                    "example": "agnesmo@mail.com"
                  },
                  "password": {
                    "type": "password",
                    "example": "heri1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login success!"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MTksIndhcmVob3VzZUlkIjoxMiwiaWF0IjoxNjY2MDIyNTc0fQ.HpBlFpKLYexC8uw5Qps6yfNcX_m8OinmqUO4NLPQgHs"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "wrong password",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "failed"
                    },
                    "message": {
                      "type": "string",
                      "example": "user email already exists"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "gelar": {
            "type": "string",
            "example": "Ms"
          },
          "fullName": {
            "type": "string",
            "example": "Agnes Monica"
          },
          "tanggal_lahir": {
            "type": "date",
            "example": "2002-09-11 22:29:20"
          },
          "kebangsaan": {
            "type": "string",
            "example": "Indonesia"
          },
          "email": {
            "type": "string",
            "example": "agnesmo@mail.com"
          },
          "hp": {
            "type": "string",
            "example": "081384753928"
          },
          "negara": {
            "type": "string",
            "example": "Indonesia"
          },
          "password": {
            "type": "password",
            "example": "heri1234"
          },
          "provinsi": {
            "type": "string",
            "example": "DKI Jakarta"
          },
          "kabupaten": {
            "type": "string",
            "example": "Jakarta Timur"
          },
          "username": {
            "type": "string",
            "example": "agnesmonikah"
          }
        }
      }
    }
  },
  "securitySchemes": {
    "bearerToken": {
      "type": "http",
      "scheme": "bearer"
    }
  }
}
