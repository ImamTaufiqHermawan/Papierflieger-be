{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "comma-dangle": ["error", {
        "arrays": "always",
        "objects": "always",
        "imports": "never",
        "exports": "never",
        "functions": "never"
    }],
    "quotes": ["error", "single"],
    "max-len": ["error", { 
        "code": 80, 
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreStrings": true
    }],
    "jest/expect-expect": "off",
    "no-console": "error",
    "no-unused-labels": "error",
    "no-unused-vars": "error",
    "semi": ["error", "never"]
  }
}
